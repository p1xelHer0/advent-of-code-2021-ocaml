{
  "name": "aoc_2021",
  "description": "Advent of Code 2020 in OCaml",
  "license": "MIT",
  "esy": {
    "build": "dune build -p #{self.name}",
    "buildDev": "dune build --root . --only-package #{self.name}"
  },
  "scripts": {
    "test": "dune test -f",
    "test:watch": "dune test -fw",
    "format": "dune build @fmt --auto-promote",
    "utop": "dune utop lib -- -implicit-bindings"
  },
  "dependencies": {
    "@opam/dune": "2.9.1",
    "@opam/rresult": "0.7.0",
    "ocaml": "4.12.0"
  },
  "devDependencies": {
    "@opam/ocaml-lsp-server": "*",
    "@opam/ocamlformat": "0.19.0",
    "@opam/ocamlformat-rpc": "0.19.0",
    "@opam/ppx_inline_test": "v0.14.1",
    "@opam/utop": "*"
  }
}
